@{
    ViewData["Title"] = "Register";
}

<div>
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Register" asp-controller="User">
        <div class="mb-3">
            <label for="loginInput" class="form-label">Login</label>
            <input type="text" class="form-control" id="loginInput" name="login" required>
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="form-label">Password</label>
            <input type="password" class="form-control" id="inputPassword" name="password" required>
        </div>

        <div class="mb-3">
            <label for="inputRepeatPassword" class="form-label">Repeat Password</label>
            <input type="password" class="form-control" id="inputRepeatPassword" name="repeatpassword" required>
        </div>

        <button type="submit" class="btn btn-primary mb-3">Register</button>
    </form>    

    <div class="d-flex flex-row ">
        <p>Already have an account?</p>
        <a class="ms-1" asp-controller="User" asp-action="Login" >Login</a>
    </div>

    <div class="text-danger mb-2">@ViewBag.Error</div>
</div>

